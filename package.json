  "bugs": {
    "url": "https://github.com/ananzhusen/first-npm-test/issues"
  },
  "homepage": "https://github.com/ananzhusen/first-npm-test#readme",
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
